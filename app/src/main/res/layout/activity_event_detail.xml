<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/detailPerformerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Performer Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/detailPerformerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Performer Description"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/detailPerformerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Performer Link"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/detailVenueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue Name"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/detailDatesAndTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dates and Times"
        android:layout_marginBottom="8dp" />

</LinearLayout>
